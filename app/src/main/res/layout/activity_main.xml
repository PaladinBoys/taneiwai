<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <com.taneiwai.app.widget.TabView
        android:id="@+id/tabview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_blue"
        app:tab_texts="首页|交流|我的"
        app:tab_textSelectColor="@color/white"
        app:tab_verticalGap="5dp"
        app:tab_borderWidth="0.5dp"
        app:tab_borderColor="@color/normal_text_color"
        app:tab_textSize="14sp" />

    <FrameLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabview"/>

</RelativeLayout>
